<!doctype html>
<html lang="en">
<head>
	<!-- {{ template.name }} -->
	<title>{{ page_title }} - {{ shop.name }}</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="description" content="{{ page_description | escape }}">
	<link rel="canonical" href="{{ canonical_url }}">
	<meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
	<link rel="stylesheet" href="https://use.typekit.net/wzz8prz.css">
	{{ 'main.css' | asset_url | stylesheet_tag }}
	{{ content_for_header }} <!-- Header hook for plugins -->
	{% render 'social-meta-tags' %}
	
	<!--<script type="text/javascript" src="https://www.bugherd.com/sidebarv2.js?apikey=zob4xjjglgftvhsyrvxqhg" async="true"></script>-->

</head>
<body class="is-tab-user">

	{% render 'info-bar' %}

	{% include 'site-header' %}

	<main role="main">
		{% render 'breadcrumb' %}

		{{ content_for_layout }}
	</main>

	{% include 'site-footer' %}

	{% if template contains 'product' %}
		<div id="add-to-cart-modal" aria-hidden="true" class="modal">

			<div tabindex="-1" data-micromodal-close class="modal__overlay">

				
				<div role="dialog" aria-modal="true" aria-labelledby="modal-1-title" class="modal__container stack">


					<header class="modal__header text-center">
						<h2 id="modal-1-title" class=" heading heading--h2">Added to basket</h2>

						
						<button aria-label="Close modal" data-micromodal-close class="modal__close"></button>
					</header>

					<div id="modal-1-content" class="stack	text-center">
						<a href="/cart" class="btn btn--primary btn--center">Checkout</a>

						<p>or <a href="{{ page.url }}" data-custom-close="add-to-cart-modal">continue shopping</a></p>
					</div>

				</div>
			</div>
		</div>
	{% endif %}

	{{ 'option_selection.js' | shopify_asset_url | script_tag }}


	{{ 'app.js' | asset_url | script_tag }}

	{% include 'subscription-theme-footer' %}

</body>
</html>
